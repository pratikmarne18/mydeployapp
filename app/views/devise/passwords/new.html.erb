<section class="content-header">
	<h1> Forgot your password?</h1>
</section>
<section class="content">
	<div class="box box-success">
		<div class="box-header">
			<h4 class="with-border">Enter your registered Email ID to set password</h4>
		</div>
		<div class="box-body">
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal" }) do |f| %>
			  <%= devise_error_messages! %>
			
			  <div class="form-group">
			  	<div class="col-md-1 col-md-offset-1">
			    	<%= f.label :email , :class => "control-label"%>
			    </div>
			    <div class="col-md-4">
			    	<%= f.email_field :email, autofocus: true, :class => "form-control" %>
			  	</div>
			  </div>
			
			  <div class="box-footer">
			  	<div class="col-md-offset-2">
			    	<%= f.submit "Send me reset password instructions", :class => "btn btn-success" %>
			  	</div>
			  </div>
			<% end %>
		</div>
	</div>
</section>		
